<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    
    <property name="hibernate.connection.url">jdbc:mysql://localhost/sensor4cities</property>
    <property name="hibernate.connection.username">sensor4cities</property>
    <property name="hibernate.connection.password">sensor4cities</property>
    
<!--    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>-->
    
    <mapping class="br.ufpa.gercom.sensor4cities.model.QueryTwitter"/>
    <mapping class="br.ufpa.gercom.sensor4cities.model.ReplyTwitter"/>
    <mapping class="br.ufpa.gercom.sensor4cities.model.QueryWeb"/>
    <mapping class="br.ufpa.gercom.sensor4cities.model.ReplyWeb"/>
    <mapping class="br.ufpa.gercom.sensor4cities.model.Register"/>
    <mapping class="br.ufpa.gercom.sensor4cities.model.Sensor"/>
    <mapping class="br.ufpa.gercom.sensor4cities.model.AdminMember"/>
    <mapping class="br.ufpa.gercom.sensor4cities.model.TwitterConfig"/>
    <mapping class="br.ufpa.gercom.sensor4cities.model.LoggerException"/>
    
    
  </session-factory>
</hibernate-configuration>
